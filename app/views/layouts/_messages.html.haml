.container-fluid
  .row
    .container
      - flash.each do |msg_type, message|
        %br
        %div{ class: "alert alert-dismissible #{bootstrap_class_for(msg_type)} fade in", role: 'alert' }
          %button.close{ type: 'button', 'data-dismiss': 'alert', 'aria-label': 'hidden ' }
            %span{ 'aria-hidden': true } &times;
          = message
