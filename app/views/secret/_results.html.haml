- results.each do |result|
  .card
    - if result.banner.nil?
      = render partial: 'default_banner', locals: { alt: result.name }
    - else
      = render partial: 'banner', locals: { banner: result.banner_preview, alt: result.name }
    .card-block
      %h4.card-title
        = result.name
        %small.text-muted.pull-right
          = result.network
      %p.card-text
        = result.overview
    .card-block.actions
      = link_to 'This One!', series_index_path(series: result.as_json), method: :post, id: result.css_id, class: 'btn btn-primary pull-right'
